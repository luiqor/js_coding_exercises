{
	"root": true,
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},

	"env": {
		"es6": true,
		"jest": true,
		"node": true
	},
	"ignorePatterns": ["test/"],
	"rules": {
		"no-loss-of-precision": "off",
		"no-nonoctal-decimal-escape": "off",
		"no-unsafe-optional-chaining": "off",
		"no-useless-backreference": "off"
	}
}
